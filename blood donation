        print("\t\t\t\t\t 4. Increment Blood Quantity")
        print("\t\t\t\t\t 5. Decrement Blood Quantity")
        print("\t\t\t\t\t 6. Exit")
        print("-" * 95)
        choice = int(input("\t\t\t\tEnter your choice:"))
        

        



    
    

      